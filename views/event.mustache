<html>
<head>
{{>header}}
<title>A-Reunite</title>
</head>
<body>

{{! <!-- ***** Preloader Start ***** -->
    <div id="js-preloader" class="js-preloader">
      <div class="preloader-inner">
        <span class="dot"></span>
        <div class="dots">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </div>
    </div>
    <!-- ***** Preloader End ***** --> }}
    
    <!-- ***** Header Area Start ***** -->
    <header class="header-area header-sticky">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    {{>nav}}
                </div>
            </div>
        </div>
    </header>
    <!-- ***** Header Area End ***** -->

    <!-- ***** About Us Page ***** -->
    {{! <div class="page-heading-shows-events">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2>Tickets On Sale Now!</h2>
                    <span>Check out upcoming and past shows & events and grab your ticket right now.</span>
                </div>
            </div>
        </div>
    </div> }}

    <div class="ticket-details-page">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="left-image">
                        <img src="{{event.image}}" alt="">
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="right-content">
                        <h4>{{event.title}}</h4>
                        <span>{{event.available_tickets}} Tickets still available</span>
                        <ul>
                            <li><i class="fa fa-clock-o"></i> {{event.date}} from {{event.time_start}} to {{event.time_end}}</li>
                            <li><i class="fa fa-map-marker"></i>{{event.location}}</li>
                        </ul>
                        <div class="total">
                            <div class="main-dark-button"><a href="" onclick="yourFunction()">RSVP</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
    function yourFunction() {
        alert("You have RSVP'd to this event!");
    }
    </script>

    {{>footer}}
    
    {{>scripts}}

  </body>

</html>
