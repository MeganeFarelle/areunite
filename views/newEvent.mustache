<html>
<head>
{{>header}}
<title>A-Reunite</title>
</head>
<body>

<!-- ***** Preloader Start ***** -->
    {{! <div id="js-preloader" class="js-preloader">
      <div class="preloader-inner">
        <span class="dot"></span>
        <div class="dots">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </div>
    </div> }}
    <!-- ***** Preloader End ***** -->
    
    <!-- ***** Header Area Start ***** -->
    <header class="header-area header-sticky">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    {{>nav}}
                </div>
            </div>
        </div>
    </header>
    <!-- ***** Header Area End ***** -->

    <!-- ***** About Us Page ***** -->
    <div class="page-heading-shows-events">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2>Add New Event</h2>
                    <span>Create a new Event</span>
                </div>
            </div>
        </div>
    </div>

    <div class="rent-venue-application">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
 
                    <div class="heading-text">
                        <h4>Create Event</h4>
                    </div>
                    <div class="contact-form">
                        <form id="contact" action="/events/new" method="post">
                          <div class="row">
                          <div class="col-lg-12">
                              <fieldset>
                                <input name="title" type="text" id="title" placeholder="Event Title*" required="">
                              </fieldset>
                            </div>
                            <div class="col-lg-12">
                              <fieldset>
                                <textarea name="description" rows="6" id="description" placeholder="Event Desciption" required=""></textarea>
                              </fieldset>
                            </div>
                            <div class="col-lg-12">
                              <fieldset>
                                <input name="date" type="date" id="date"  placeholder="Event Date*" required="">
                              </fieldset>
                            </div>
                            <div class="col-md-6 col-sm-12">
                              <fieldset>
                                <input name="time_start" type="text" id="time_start" placeholder="Start Time*" required="">
                              </fieldset>
                            </div>
                            <div class="col-md-6 col-sm-12">
                              <fieldset>
                                <input name="time_end" type="text" id="time_end" placeholder="End Time*" required="">
                              </fieldset>
                            </div>
                            <div class="col-md-6 col-sm-12">
                              <fieldset>
                                <input name="available_tickets" type="number" id="available_tickets" placeholder="Number of Tickets available*" required="">
                              </fieldset>
                            </div>
                            <div class="col-md-6 col-sm-12">
                              <fieldset>
                                <input name="location" type="text" id="location" placeholder="Location*" required="">
                              </fieldset>
                            </div>
                            <div class="col-lg-12">
                              <fieldset>
                                <select name="category" id="category" required="">
                                  <option value="networking">Networking</option>
                                  <option value="sports">Professional Development</option>
                                  <option value="campus">Campus Events</option>
                              </fieldset>
                            </div>
                            <div class="col-lg-12">
                              <fieldset>
                                <input name="image" type="text" id="image" placeholder="Event Image URL*" required="">
                              </fieldset>
                            </div>

                            <div class="col-lg-12">
                              <fieldset>
                                <button type="submit" id="form-submit" class="main-dark-button">Save</button>
                              </fieldset>
                            </div>
                          </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>

    {{>footer}}
    
    {{>scripts}}


</body>
</html>