<html>
<head>
{{>header}}
<title>A-Reunite</title>
</head>
<body>

<!-- ***** Preloader Start ***** -->
    {{! <div id="js-preloader" class="js-preloader">
      <div class="preloader-inner">
        <span class="dot"></span>
        <div class="dots">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </div>
    </div> }}
    <!-- ***** Preloader End ***** -->
    
    <!-- ***** Header Area Start ***** -->
    <header class="header-area header-sticky">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    {{>nav}}
                </div>
            </div>
        </div>
    </header>
    <!-- ***** Header Area End ***** -->

    <!-- ***** About Us Page ***** -->
    <div class="page-heading-shows-events">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2>Edit Event</h2>
                    <span>Edit your Event</span>
                </div>
            </div>
        </div>
    </div>

    <div class="rent-venue-application">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
 
                    <div class="heading-text">
                        <h4>Edit Event</h4>
                    </div>
                    <div class="contact-form">
                        <form id="contact" action="/events/{{event._id}}/edit" method="put">
                        
                          <div class="row">
                          <div class="col-lg-12">
                              <fieldset>
                                <input name="title" type="text" id="title" placeholder="Event Title*" value={{event.title}} required="">
                              </fieldset>
                            </div>
                            <div class="col-lg-12">
                              <fieldset>
                                <textarea name="description" rows="6" id="description" placeholder="Event Desciption" required="">{{event.description}}</textarea>
                              </fieldset>
                            </div>
                            <div class="col-lg-12">
                              <fieldset>
                                <input name="date" type="date" id="date"  placeholder="Event Date*" value={{event.date}} required="">
                              </fieldset>
                            </div>
                            <div class="col-md-6 col-sm-12">
                              <fieldset>
                                <input name="time_start" type="text" id="time_start" placeholder="Start Time*" value={{event.time_start}} required="">
                              </fieldset>
                            </div>
                            <div class="col-md-6 col-sm-12">
                              <fieldset>
                                <input name="time_end" type="text" id="time_end" placeholder="End Time*" value={{event.time_end}} required="">
                              </fieldset>
                            </div>
                            <div class="col-md-6 col-sm-12">
                              <fieldset>
                                <input name="available_tickets" type="number" id="available_tickets" placeholder="Number of Tickets available*" value={{event.available_tickets}} required="">
                              </fieldset>
                            </div>
                            <div class="col-md-6 col-sm-12">
                              <fieldset>
                                <input name="location" type="text" id="location" placeholder="Location*" value={{event.location}} required="">
                              </fieldset>
                            </div>
                            <div class="col-lg-12">
                              <fieldset>
                                <input name="image" type="text" id="image" placeholder="Event Image URL*" value={{event.image}} required="">
                              </fieldset>
                            </div>

                            <div class="col-lg-12">
                              <fieldset>
                                <button type="submit" id="form-submit" class="main-dark-button">Save</button>
                              </fieldset>
                            </div>
                          </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>

    {{>footer}}
    
    {{>scripts}}


</body>
</html>